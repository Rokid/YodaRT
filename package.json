{
  "name": "yodart",
  "version": "7.27.0",
  "scripts": {
    "prerestart": "tools/runtime-install",
    "pre-push": "npm run lint",
    "restart": "tools/runtime-op restart",
    "lint": "npm run lint-js && npm run lint-cc",
    "lint-js": "standard",
    "lint-cc": "tools/clang-format",
    "website": "jsdoc -c jsdoc.config -R README.md -r . -d website/docs -u website/tutorials",
    "pretest": "tools/runtime-install -a",
    "bare-test": "tools/runtime-install -t && tools/test",
    "test": "tools/test --reporter tap-nyan"
  },
  "config": {
    "unsafe-perm": true
  },
  "engine": {
    "shadow": "0.10.x"
  },
  "manifest": {
    "apilevel": 0.6
  },
  "devDependencies": {
    "@yoda/mock": "Rokid/yoda-mock",
    "husky": "^1.0.0-rc.14",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.5.5",
    "standard": "^11.0.1",
    "tap-json": "^1.0.0",
    "tap-nyan": "^1.1.0",
    "tap-parser": "^7.0.0",
    "tap-spec": "^5.0.0",
    "tape": "shadow-node/tape#master"
  },
  "standard": {
    "ignore": [
      "website",
      "node_modules"
    ]
  }
}
